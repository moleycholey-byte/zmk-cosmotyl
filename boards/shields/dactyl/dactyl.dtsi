#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
// | MX1  | MX2  | MX3  | MX4  | MX5  |                 | MX6  | MX7  | MX8  | MX9  | MX10 |
// | MX11 | MX12 | MX13 | MX14 | MX15 |                 | MX16 | MX17 | MX18 | MX19 | MX20 |
// | MX21 | MX22 | MX23 | MX24 | MX25 |                 | MX26 | MX27 | MX28 | MX29 | MX30 |
//        | MX31 | MX32 |                                             | MX33 | MX34 |
//                      | MX35 | MX36 |                 | MX37 | MX38 |
//                             | MX39 | MX40 |   | MX41 | MX42 |
//                             | MX43 | MX44 |   | MX45 | MX46 |

        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)          RC(0,11) RC(0,10) RC(0,9) RC(0,8) RC(0,7) RC(0,6)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)          RC(1,11) RC(1,10) RC(1,9) RC(1,8) RC(1,7) RC(1,6) 
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)          RC(2,11) RC(2,10) RC(2,9) RC(2,8) RC(2,7) RC(2,6) 
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)          RC(3,11) RC(3,10) RC(3,9) RC(3,8) RC(3,7) RC(3,6)                                         
                RC(4,2) RC(4,3) RC(4,4) RC(4,5)          RC(4,11) RC(4,10) RC(4,9) RC(4,8)                           
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "row2col";
        row-gpios
            = <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;

    };

key_physical_attrs: key_physical_attrs {
        compatible = "zmk,key-physical-attributes";
        label = "DEFAULT_1U";
        w = <1000>; // 1 unit width
        h = <1000>; // 1 unit height
        x = <0>;
        y = <0>;
        r = <0>;
        rx = <0>;
        ry = <0>;
    };

    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Dactyl 5x6";
        transform = <&default_transform>;
        kscan = <&kscan0>;
        keys  //                     w   h    x    y     rot    rx    ry
            // Row 1 (12 keys)
            = <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,

            // Row 2 (12 keys)
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            
            // Row 3 (12 keys)
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            
            // Row 4 (12 keys)
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            
            // Row 5 (8 keys) - The physical layout doesn't need to align, but it helps for visualization.
            // For a clean visualization, you might want to adjust the X offset of these 8 keys
            // to make them appear centered under the 12 columns, but this is a complex detail.
            // For a simple definition, we just list the 8 keys:
           <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>,
            <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>, <&key_physical_attrs>
            ;
    };

};
